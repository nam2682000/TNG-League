<style>
    #navMenu {
    height: 30px !important;
    line-height: 30px !important;
    }

    #navTop {
    padding-top: 10px;
    height: 270px !important;
    line-height: 270px !important;
    }

    .foodter-background {
    background-color: var(--bacground-color);
    }

    .bg-section {
    background-image: url('@Url.Content("~/images/nen-new.jpg")');
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
    width: 100%;
    height: 270px;
    color: white;
    }

    ul#mobile-demo {
    padding-top: 3rem;
    background-color: var(--bacground-color);
    }

    ul.left.hide-on-med-and-down {
    padding-left: .75rem;
    }

    nav .sidenav-trigger i {
    height: 30px !important;
    line-height: 30px !important;
    font-size: 2.3rem;
    }

    .nav-active {
    background-color: #0f3075;
    }

    .sidenav li>a {
    color: var(--text-color) !important;
    }

    nav .brand-logo {
    font-size: 1rem;
    padding: 0 .75rem;
    }

    header {
    max-height: 300px;
    }

    .sidenav {
    width: 220px;
    }

    .btn-chon-giai {
        height: 26px;
        line-height: 26px;
        margin-top: 3px;
        font-size: 0.7rem !important;
        padding: 0px 10px !important;
    }

    .btn-dang-xuat{
        height: 26px;
        line-height: 26px;
        font-size: 0.7rem !important;
        padding: 0px 10px !important;
        position:absolute;
        right:-90px;
        margin-top: 3px;
    }

    @@media only screen and (max-width: 992px) 
    {
        .logo-desktop {
            display: none !important;
        }

        .btn-dang-xuat{
            display:none;
        }

        .logo-mobile {
            left: 8.5rem !important;
        }

    }
</style>
@{
    string controllerName = ViewContext.RouteData.Values["Controller"]?.ToString() ?? string.Empty;
}
<header>
    <div class="">
        <nav id="navTop" class="bg-section">
            <div class="nav-wrapper container">
            </div>
        </nav>
        <nav id="navMenu">
            <div class="nav-wrapper container">
                <a href="#" class="brand-logo right logo-mobile">GIẢI ĐÁ BÓNG NAM</a>
                <a href="#" class="brand-logo right btn btn-chon-giai">CHỌN GIẢI</a>
                <a class="red btn btn-dang-xuat" asp-area="Admin" asp-controller="Auth" asp-action="DangXuat">ĐĂNG XUẤT</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="left hide-on-med-and-down">
                    <li
                        class="@(controllerName == "LichThiDau" ? "nav-active" : "")">
                        <a asp-area="Admin" asp-controller="LichThiDau" asp-action="Index">LỊCH THI ĐẤU</a>
                    </li>
                    <li class="@(controllerName == "Doi" ? "nav-active" : "")">
                        <a asp-area="Admin" asp-controller="Doi" asp-action="Index">CLUB</a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- mobile -->
        <ul class="sidenav" id="mobile-demo">
            <li class="@(controllerName == "LichThiDau" ? "nav-active" : "")"><a
                asp-area="Admin" asp-controller="LichThiDau" asp-action="Index">LỊCH THI ĐẤU</a>
            </li>
            <li class="@(controllerName == "Doi" ? "nav-active" : "")"><a
                asp-area="Admin" asp-controller="Doi" asp-action="Index">CLUB</a>
            </li>
            <li class="@(controllerName == "Doi" ? "nav-active" : "")">
                <a asp-area="Admin" asp-controller="Auth" asp-action="DangXuat">ĐĂNG XUẤT</a>
            </li>
        </ul>
    </div>
</header>